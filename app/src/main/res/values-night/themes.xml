<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Church"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/mainDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryMain</item>
        <item name="colorSecondaryVariant">@color/secondaryMainDark</item>
        <item name="colorOnSecondary">@color/mainExtraLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="useMaterialThemeColors">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:fontFamily">@font/dubai_regular</item>
        <item name="background">@color/mainDark</item>
        <item name="backgroundColor">@color/main</item>
        <item name="hintTextColor">@color/textHint</item>
        <item name="textFillColor">@color/white</item>
        <item name="tint">@color/purple_200</item>
        <item name="played_color">@color/mainLight</item>
        <item name="android:colorBackground">@color/mainDark</item>
    </style>

    <style name="toolBar_Theme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:titleTextColor" tools:targetApi="m">@color/white</item>
        <item name="android:subtitleTextColor" tools:targetApi="m">@color/textHint</item>
<!--        <item name="android:iconTint" tools:targetApi="o">@color/black</item>-->
<!--        <item name="android:popupTheme">ThemeOverlay.MaterialComponents.Dark</item>-->
    </style>

    <style name="ThemeOverlay.myPopupTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:colorBackground">@color/mainDark</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>
</resources>